<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Program - ONBOARD3</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="grid-bg"></div>
    
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-logo">
                <h1>ONBOARD3</h1>
                <p>Web3 Builder Hub</p>
            </div>

            <nav class="sidebar-menu">
                <a href="/dashboard" class="menu-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/dashboard/quests" class="menu-item">
                    <i class="fas fa-trophy"></i>
                    <span>Quests</span>
                </a>
                <a href="/dashboard/learn" class="menu-item">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Learn</span>
                </a>
                <a href="/dashboard/bounties" class="menu-item">
                    <i class="fas fa-briefcase"></i>
                    <span>Bounties</span>
                </a>
                <a href="/dashboard/referral" class="menu-item active">
                    <i class="fas fa-users"></i>
                    <span>Referral</span>
                </a>
                <a href="/dashboard/leaderboard" class="menu-item">
                    <i class="fas fa-medal"></i>
                    <span>Leaderboard</span>
                </a>
                <a href="/dashboard/settings" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="menu-item logout" onclick="handleLogout(event)">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <p>v1.0 ‚Äî Powered by</p>
                <p class="version">ONBOARD3</p>
            </div>
        </aside>

        <main class="main-content">
            <header class="header">
                <div class="header-content">
                    <div class="header-title">
                        <h2>Referral Program üéÅ</h2>
                        <p>Invite builders and earn rewards together</p>
                    </div>
                    <div class="header-stats">
                        <div class="stat-badge">
                            <i class="fas fa-users" style="color: #39FF14;"></i>
                            <span><%= user.referralStats.totalReferrals || 0 %> Referrals</span>
                        </div>
                        <div class="stat-badge">
                            <i class="fas fa-coins" style="color: #39FF14;"></i>
                            <span><%= user.referralStats.totalEarned || 0 %> XP Earned</span>
                        </div>
                    </div>
                </div>
            </header>

            <div class="content">
                <!-- Referral Link Card -->
                <div class="card" style="background: linear-gradient(135deg, rgba(57, 255, 20, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%);">
                    <div class="card-header">
                        <h3><i class="fas fa-link"></i> Your Referral Link</h3>
                    </div>
                    <p style="color: #888; margin-bottom: 1rem;">Share your unique link with friends and earn rewards when they sign up!</p>
                    
                    <div style="display: flex; gap: 1rem; flex-wrap: wrap; margin-bottom: 1rem;">
                        <div style="flex: 1; min-width: 300px; background: rgba(0, 0, 0, 0.5); padding: 1rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <label style="display: block; color: #888; font-size: 0.85rem; margin-bottom: 0.5rem;">Referral Link</label>
                            <div style="display: flex; gap: 0.5rem;">
                                <input type="text" id="referralLink" value="<%= referralLink %>" readonly style="flex: 1; background: transparent; border: none; color: #39FF14; font-size: 0.95rem; padding: 0.5rem;">
                                <button onclick="copyReferralLink()" class="btn btn-primary" style="padding: 0.5rem 1.5rem; white-space: nowrap;">
                                    <i class="fas fa-copy"></i> Copy
                                </button>
                            </div>
                        </div>
                        
                        <div style="flex: 1; min-width: 300px; background: rgba(0, 0, 0, 0.5); padding: 1rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <label style="display: block; color: #888; font-size: 0.85rem; margin-bottom: 0.5rem;">Your Referral Code</label>
                            <div style="display: flex; gap: 0.5rem; align-items: center;">
                                <input type="text" id="referralCode" value="<%= user.referralCode %>" readonly style="flex: 1; background: transparent; border: none; color: #39FF14; font-size: 1.5rem; font-weight: 700; padding: 0.5rem; text-align: center; letter-spacing: 2px;">
                                <button onclick="copyReferralCode()" class="btn btn-secondary" style="padding: 0.5rem 1rem;">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Social Share Buttons -->
                    <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                        <button onclick="shareTwitter()" class="btn btn-secondary" style="flex: 1; min-width: 150px;">
                            <i class="fab fa-twitter"></i> Share on Twitter
                        </button>
                        <button onclick="shareTelegram()" class="btn btn-secondary" style="flex: 1; min-width: 150px;">
                            <i class="fab fa-telegram"></i> Share on Telegram
                        </button>
                        <button onclick="shareWhatsApp()" class="btn btn-secondary" style="flex: 1; min-width: 150px;">
                            <i class="fab fa-whatsapp"></i> Share on WhatsApp
                        </button>
                    </div>
                </div>

                <!-- Referral Stats -->
                <div class="grid-3">
                    <div class="card">
                        <div style="text-align: center; padding: 1rem;">
                            <i class="fas fa-users" style="font-size: 3rem; color: #39FF14; margin-bottom: 1rem;"></i>
                            <div style="font-size: 2.5rem; color: #39FF14; font-weight: 700; margin-bottom: 0.5rem;">
                                <%= user.referralStats.totalReferrals || 0 %>
                            </div>
                            <p style="color: #888; font-size: 0.9rem;">Total Referrals</p>
                        </div>
                    </div>

                    <div class="card">
                        <div style="text-align: center; padding: 1rem;">
                            <i class="fas fa-user-check" style="font-size: 3rem; color: #39FF14; margin-bottom: 1rem;"></i>
                            <div style="font-size: 2.5rem; color: #39FF14; font-weight: 700; margin-bottom: 0.5rem;">
                                <%= user.referralStats.activeReferrals || 0 %>
                            </div>
                            <p style="color: #888; font-size: 0.9rem;">Active Referrals</p>
                        </div>
                    </div>

                    <div class="card">
                        <div style="text-align: center; padding: 1rem;">
                            <i class="fas fa-coins" style="font-size: 3rem; color: #39FF14; margin-bottom: 1rem;"></i>
                            <div style="font-size: 2.5rem; color: #39FF14; font-weight: 700; margin-bottom: 0.5rem;">
                                <%= user.referralStats.totalEarned || 0 %>
                            </div>
                            <p style="color: #888; font-size: 0.9rem;">XP Earned</p>
                        </div>
                    </div>
                </div>

                <!-- Referral Rewards -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-gift"></i> Referral Rewards</h3>
                    </div>
                    <div class="grid-2">
                        <div style="background: rgba(57, 255, 20, 0.05); padding: 1.5rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 50px; height: 50px; background: rgba(57, 255, 20, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-user-plus" style="font-size: 1.5rem; color: #39FF14;"></i>
                                </div>
                                <div>
                                    <h4 style="color: #39FF14; margin-bottom: 0.3rem;">Sign Up Bonus</h4>
                                    <p style="color: #888; font-size: 0.85rem;">When your friend signs up</p>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                                <span style="background: rgba(57, 255, 20, 0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14; font-weight: 600;">
                                    <i class="fas fa-star"></i> +50 XP
                                </span>
                            </div>
                        </div>

                        <div style="background: rgba(57, 255, 20, 0.05); padding: 1.5rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 50px; height: 50px; background: rgba(57, 255, 20, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: #39FF14;"></i>
                                </div>
                                <div>
                                    <h4 style="color: #39FF14; margin-bottom: 0.3rem;">First Quest Bonus</h4>
                                    <p style="color: #888; font-size: 0.85rem;">When they complete first quest</p>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                                <span style="background: rgba(57, 255, 20, 0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14; font-weight: 600;">
                                    <i class="fas fa-star"></i> +100 XP
                                </span>
                            </div>
                        </div>

                        <div style="background: rgba(57, 255, 20, 0.05); padding: 1.5rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 50px; height: 50px; background: rgba(57, 255, 20, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-graduation-cap" style="font-size: 1.5rem; color: #39FF14;"></i>
                                </div>
                                <div>
                                    <h4 style="color: #39FF14; margin-bottom: 0.3rem;">Course Admission</h4>
                                    <p style="color: #888; font-size: 0.85rem;">When they get admitted to a course</p>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                                <span style="background: rgba(57, 255, 20, 0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14; font-weight: 600;">
                                    <i class="fas fa-star"></i> +200 XP
                                </span>
                            </div>
                        </div>

                        <div style="background: rgba(57, 255, 20, 0.05); padding: 1.5rem; border-radius: 12px; border: 1px solid rgba(57, 255, 20, 0.2);">
                            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                                <div style="width: 50px; height: 50px; background: rgba(57, 255, 20, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-infinity" style="font-size: 1.5rem; color: #39FF14;"></i>
                                </div>
                                <div>
                                    <h4 style="color: #39FF14; margin-bottom: 0.3rem;">Lifetime Commission</h4>
                                    <p style="color: #888; font-size: 0.85rem;">Earn from their activities</p>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                                <span style="background: rgba(57, 255, 20, 0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14; font-weight: 600;">
                                    10% of their earnings
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Your Referrals List -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-list"></i> Your Referrals</h3>
                        <span style="color: #888; font-size: 0.85rem;"><%= referrals.length %> total</span>
                    </div>
                    
                    <% if (referrals && referrals.length > 0) { %>
                        <% referrals.forEach((referral, index) => { %>
                        <div class="bounty-item">
                            <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
                                <div style="width: 40px; height: 40px; background: rgba(57, 255, 20, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; color: #39FF14;">
                                    <%= index + 1 %>
                                </div>
                                <div style="flex: 1; min-width: 200px;">
                                    <div style="font-weight: 600; margin-bottom: 0.3rem;"><%= referral.username %></div>
                                    <div style="color: #888; font-size: 0.85rem;">
                                        Joined <%= new Date(referral.createdAt).toLocaleDateString() %>
                                    </div>
                                </div>
                                <div style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
                                    <span style="background: rgba(57, 255, 20, 0.1); padding: 0.4rem 0.8rem; border-radius: 6px; color: #39FF14; font-size: 0.85rem;">
                                        <i class="fas fa-star"></i> <%= referral.xp || 0 %> XP
                                    </span>
                                    <span class="status-badge <%= referral.isActive ? 'status-approved' : 'status-pending' %>">
                                        <%= referral.isActive ? '‚úì Active' : '‚è≥ Pending' %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <div style="text-align: center; padding: 3rem;">
                            <i class="fas fa-users" style="font-size: 4rem; color: #333; margin-bottom: 1rem;"></i>
                            <p style="color: #888; font-size: 1.1rem; margin-bottom: 0.5rem;">No referrals yet</p>
                            <p style="color: #666; font-size: 0.9rem;">Share your referral link to start earning rewards!</p>
                        </div>
                    <% } %>
                </div>

                <!-- Referral Leaderboard -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-trophy"></i> Top Referrers</h3>
                    </div>
                    
                    <% if (topReferrers && topReferrers.length > 0) { %>
                        <% topReferrers.forEach((referrer, index) => { %>
                        <div class="leaderboard-item <%= index === 0 ? 'gold' : index === 1 ? 'silver' : index === 2 ? 'bronze' : '' %>">
                            <div class="leaderboard-rank">
                                <div class="rank-number" style="color: <%= index === 0 ? '#FFD700' : index === 1 ? '#C0C0C0' : index === 2 ? '#CD7F32' : '#39FF14' %>">
                                    #<%= index + 1 %>
                                </div>
                                <div class="user-info">
                                    <h4><%= referrer.username %></h4>
                                    <p><%= referrer.totalReferrals %> referrals ‚Ä¢ <%= referrer.totalEarned %> XP earned</p>
                                </div>
                            </div>
                            <span style="background: rgba(57, 255, 20, 0.2); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14; font-weight: 600;">
                                <i class="fas fa-trophy"></i>
                            </span>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <p style="color: #888; text-align: center; padding: 2rem;">No leaderboard data yet</p>
                    <% } %>
                </div>
            </div>
        </main>
    </div>

    <script>
        const referralLink = '<%= referralLink %>';
        const referralCode = '<%= user.referralCode %>';

        function copyReferralLink() {
            const input = document.getElementById('referralLink');
            input.select();
            document.execCommand('copy');
            
            alert('‚úÖ Referral link copied to clipboard!');
        }

        function copyReferralCode() {
            const input = document.getElementById('referralCode');
            input.select();
            document.execCommand('copy');
            
            alert('‚úÖ Referral code copied to clipboard!');
        }

        function shareTwitter() {
            const text = `Join me on ONBOARD3 and start building in Web3! üöÄ\n\nUse my referral code: ${referralCode}\n\n`;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}&url=${encodeURIComponent(referralLink)}`;
            window.open(url, '_blank');
        }

        function shareTelegram() {
            const text = `Join me on ONBOARD3 and start building in Web3! üöÄ\n\nUse my referral code: ${referralCode}`;
            const url = `https://t.me/share/url?url=${encodeURIComponent(referralLink)}&text=${encodeURIComponent(text)}`;
            window.open(url, '_blank');
        }

        function shareWhatsApp() {
            const text = `Join me on ONBOARD3 and start building in Web3! üöÄ\n\nUse my referral code: ${referralCode}\n\n${referralLink}`;
            const url = `https://wa.me/?text=${encodeURIComponent(text)}`;
            window.open(url, '_blank');
        }

        async function handleLogout(event) {
            event.preventDefault();
            if (confirm('Are you sure you want to logout?')) {
                try {
                    const response = await fetch('/auth/logout', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    
                    if (response.ok) {
                        window.location.href = '/auth';
                    }
                } catch (error) {
                    console.error('Logout error:', error);
                }
            }
        }
    </script>
</body>
</html>