<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - ONBOARD3</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="grid-bg"></div>
    
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-logo">
                <h1>ONBOARD3</h1>
                <p>Web3 Builder Hub</p>
            </div>

            <nav class="sidebar-menu">
                <a href="/dashboard" class="menu-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard Overview</span>
                </a>
                <a href="/dashboard/quests" class="menu-item active">
                    <i class="fas fa-trophy"></i>
                    <span>Quests</span>
                </a>
                <a href="/dashboard/learn" class="menu-item">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Learn (Apply)</span>
                </a>
                <!-- <a href="/dashboard/bounties" class="menu-item">
                    <i class="fas fa-briefcase"></i>
                    <span>Bounties</span>
                </a>
                <a href="/dashboard/bounty-leaderboard" class="menu-item">
                    <i class="fas fa-medal"></i>
                    <span>Bounty Leaderboard</span>
                </a> -->
                <a href="/dashboard/events" class="menu-item">
                    <i class="fas fa-calendar"></i>
                    <span>Events</span>
                </a>
                <a href="/dashboard/settings" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="menu-item logout" onclick="handleLogout(event)">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <p>v1.0 â€” Powered by</p>
                <p class="version">ONBOARD3</p>
            </div>
        </aside>

        <main class="main-content">
            <header class="header">
                <div class="header-content">
                    <div class="header-title">
                        <h2>Quests </h2>
                        <p>Complete quests to earn XP and unlock rewards</p>
                    </div>
                    <div class="header-stats">
                        <div class="stat-badge">
                            <i class="fas fa-star" style="color: #39FF14;"></i>
                            <span><%= user.xp %> XP</span>
                        </div>
                        <div class="stat-badge">
                            <i class="fas fa-trophy" style="color: #39FF14;"></i>
                            <span><%= completedCount %> Completed</span>
                        </div>
                    </div>
                </div>
            </header>

            <div class="content">
                <!-- Active Quests -->
                <% if (activeQuests && activeQuests.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-fire"></i> Active Quests</h3>
                        <span style="color: #888; font-size: 0.85rem;"><%= activeQuests.length %> in progress</span>
                    </div>
                    
                    <% activeQuests.forEach(quest => { %>
                    <a href="/dashboard/quests/<%= quest._id %>" style="text-decoration: none; color: inherit;">
                        <div class="quest-item">
                            <div class="quest-header">
                                <div>
                                    <div class="quest-title"><%= quest.title %></div>
                                    <p style="color: #888; font-size: 0.85rem; margin: 0.5rem 0;">
                                        <%= quest.shortDescription %>
                                    </p>
                                    <div style="display: flex; gap: 0.8rem; margin-top: 0.5rem; flex-wrap: wrap;">
                                        <span style="background: rgba(57,255,20,0.1); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #39FF14;">
                                            <i class="fas fa-star"></i> <%= quest.xpReward %> XP
                                        </span>
                                        <% if (quest.usdcReward > 0) { %>
                                        <span style="background: rgba(57,255,20,0.1); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #39FF14;">
                                            <i class="fas fa-coins"></i> <%= quest.usdcReward %> USDC
                                        </span>
                                        <% } %>
                                        <span style="background: rgba(255,255,255,0.05); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #888;">
                                            <%= quest.difficulty %>
                                        </span>
                                    </div>
                                </div>
                                <span class="quest-reward" style="color: #FFC107;">
                                    <%= quest.userProgress.tasksCompleted %>/<%= quest.tasks.length %>
                                </span>
                            </div>
                            <div class="quest-progress">
                                <div class="quest-progress-fill" style="width: <%= quest.userProgress.progress %>%"></div>
                            </div>
                            <p style="color: #666; font-size: 0.75rem; margin-top: 0.5rem;">
                                <%= quest.userProgress.progress %>% Complete
                            </p>
                        </div>
                    </a>
                    <% }); %>
                </div>
                <% } %>

                <!-- Available Quests -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-trophy"></i> Available Quests</h3>
                        <span style="color: #888; font-size: 0.85rem;"><%= availableQuests.length %> available</span>
                    </div>
                    
                    <% if (availableQuests && availableQuests.length > 0) { %>
                        <% availableQuests.forEach(quest => { %>
                        <div class="quest-item" style="cursor: pointer;" onclick="showQuestModal('<%= quest._id %>', `<%= quest.title.replace(/`/g, '\\`') %>`, `<%= quest.shortDescription.replace(/`/g, '\\`') %>`, <%= quest.xpReward %>, <%= quest.usdcReward %>, '<%= quest.difficulty %>', '<%= quest.estimatedDuration %>')">
                            <div class="quest-header">
                                <div>
                                    <div class="quest-title"><%= quest.title %></div>
                                    <p style="color: #888; font-size: 0.85rem; margin: 0.5rem 0;">
                                        <%= quest.shortDescription %>
                                    </p>
                                    <div style="display: flex; gap: 0.8rem; margin-top: 0.5rem; flex-wrap: wrap;">
                                        <span style="background: rgba(57,255,20,0.1); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #39FF14;">
                                            <i class="fas fa-star"></i> <%= quest.xpReward %> XP
                                        </span>
                                        <% if (quest.usdcReward > 0) { %>
                                        <span style="background: rgba(57,255,20,0.1); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #39FF14;">
                                            <i class="fas fa-coins"></i> <%= quest.usdcReward %> USDC
                                        </span>
                                        <% } %>
                                        <span style="background: rgba(255,255,255,0.05); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #888;">
                                            <%= quest.difficulty %>
                                        </span>
                                        <span style="background: rgba(255,255,255,0.05); padding: 0.3rem 0.6rem; border-radius: 6px; font-size: 0.75rem; color: #888;">
                                            <i class="fas fa-clock"></i> <%= quest.estimatedDuration %>
                                        </span>
                                    </div>
                                </div>
                                <button class="btn btn-primary" style="padding: 0.6rem 1.2rem;" onclick="event.stopPropagation(); startQuest('<%= quest._id %>')">
                                    Start Quest
                                </button>
                            </div>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <p style="color: #888; text-align: center; padding: 2rem;">
                            No available quests at the moment. Check back later!
                        </p>
                    <% } %>
                </div>

                <!-- Quest Stats -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-chart-line"></i> Your Quest Stats</h3>
                    </div>
                    <div class="grid-3">
                        <div style="text-align: center; padding: 1rem; background: rgba(57,255,20,0.05); border-radius: 12px;">
                            <div style="font-size: 2rem; color: #39FF14; font-weight: 700;"><%= completedCount %></div>
                            <div style="color: #888; font-size: 0.85rem;">Completed</div>
                        </div>
                        <div style="text-align: center; padding: 1rem; background: rgba(255,193,7,0.05); border-radius: 12px;">
                            <div style="font-size: 2rem; color: #FFC107; font-weight: 700;"><%= activeQuests.length %></div>
                            <div style="color: #888; font-size: 0.85rem;">In Progress</div>
                        </div>
                        <div style="text-align: center; padding: 1rem; background: rgba(57,255,20,0.05); border-radius: 12px;">
                            <div style="font-size: 2rem; color: #39FF14; font-weight: 700;"><%= user.xp %></div>
                            <div style="color: #888; font-size: 0.85rem;">Total XP</div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Quest Preview Modal -->
    <div id="questModal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; justify-content: center; align-items: center;">
        <div class="modal-content" style="background: #1a1a1a; border-radius: 16px; padding: 2rem; max-width: 600px; width: 90%; border: 1px solid rgba(57,255,20,0.2);">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <h3 id="modalTitle" style="margin: 0;">Quest Preview</h3>
                <button class="close-btn" onclick="closeQuestModal()" style="background: none; border: none; color: #888; font-size: 1.5rem; cursor: pointer;">&times;</button>
            </div>
            <div class="modal-body">
                <p id="modalDescription" style="color: #ccc; margin-bottom: 1rem;"></p>
                <div id="modalStats" style="display: flex; gap: 1rem; flex-wrap: wrap; margin-bottom: 1rem;"></div>
                <p style="color: #888; font-size: 0.85rem;">Click "Start Quest" to begin and track your progress.</p>
            </div>
            <div class="modal-footer" style="display: flex; gap: 1rem; justify-content: flex-end; margin-top: 1.5rem;">
                <button class="btn btn-secondary" onclick="closeQuestModal()">Cancel</button>
                <button id="modalStartBtn" class="btn btn-primary">Start Quest</button>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 10000; justify-content: center; align-items: center;">
        <div style="text-align: center;">
            <div style="border: 4px solid rgba(57,255,20,0.2); border-top: 4px solid #39FF14; border-radius: 50%; width: 50px; height: 50px; animation: spin 1s linear infinite; margin: 0 auto 1rem;"></div>
            <p style="color: #39FF14; font-size: 1.2rem; font-weight: 600;">Loading Quest...</p>
        </div>
    </div>

    <style>
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>

    <script>
        let currentQuestId = null;

        function showQuestModal(id, title, desc, xp, usdc, difficulty, duration) {
            currentQuestId = id;
            document.getElementById('modalTitle').textContent = title;
            document.getElementById('modalDescription').textContent = desc;
            
            const stats = `
                <span style="background: rgba(57,255,20,0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14;">
                    <i class="fas fa-star"></i> ${xp} XP
                </span>
                ${usdc > 0 ? `<span style="background: rgba(57,255,20,0.1); padding: 0.5rem 1rem; border-radius: 8px; color: #39FF14;">
                    <i class="fas fa-coins"></i> ${usdc} USDC
                </span>` : ''}
                <span style="background: rgba(255,255,255,0.05); padding: 0.5rem 1rem; border-radius: 8px; color: #888;">
                    ${difficulty}
                </span>
                <span style="background: rgba(255,255,255,0.05); padding: 0.5rem 1rem; border-radius: 8px; color: #888;">
                    <i class="fas fa-clock"></i> ${duration}
                </span>
            `;
            
            document.getElementById('modalStats').innerHTML = stats;
            document.getElementById('modalStartBtn').onclick = () => startQuest(id);
            document.getElementById('questModal').style.display = 'flex';
        }

        function closeQuestModal() {
            document.getElementById('questModal').style.display = 'none';
            currentQuestId = null;
        }

        async function startQuest(questId) {
            try {
                const response = await fetch('/dashboard/quests/start', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ questId })
                });

                const data = await response.json();

                if (data.success) {
                    alert('Quest started! Good luck! ðŸš€');
                    window.location.href = `/dashboard/quests/${questId}`;
                } else {
                    alert(data.message || 'Failed to start quest');
                }
            } catch (error) {
                console.error('Error starting quest:', error);
                alert('Error starting quest. Please try again.');
            }
        }

        function handleLogout(event) {
            event.preventDefault();
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }

        // Close modal on background click
        document.getElementById('questModal')?.addEventListener('click', function(e) {
            if (e.target === this) {
                closeQuestModal();
            }
        });

        // Animate progress bars on load
        window.addEventListener('load', () => {
            const progressBars = document.querySelectorAll('.quest-progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        });
    </script>
</body>
</html>