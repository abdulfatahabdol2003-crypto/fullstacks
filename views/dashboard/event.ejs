<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events - ONBOARD3</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="grid-bg"></div>
    
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-logo">
                <h1>ONBOARD3</h1>
                <p>Web3 Builder Hub</p>
            </div>

            <nav class="sidebar-menu">
                <a href="/dashboard" class="menu-item">
                    <i class="fas fa-home"></i>
                    <span>Dashboard Overview</span>
                </a>
                <a href="/dashboard/quests" class="menu-item">
                    <i class="fas fa-trophy"></i>
                    <span>Quests</span>
                </a>
                <a href="/dashboard/learn" class="menu-item">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Learn (Apply)</span>
                </a>
                <!-- <a href="bounties.html" class="menu-item">
                    <i class="fas fa-briefcase"></i>
                    <span>Bounties</span>
                </a> -->
                <!-- <a href="bounty-leaderboard.html" class="menu-item">
                    <i class="fas fa-medal"></i>
                    <span>Bounty Leaderboard</span>
                </a> -->
                <a href="/dashboard/events" class="menu-item active">
                    <i class="fas fa-calendar"></i>
                    <span>Events</span>
                </a>
                <a href="/dashboard/settings" class="menu-item">
                    <i class="fas fa-cog"></i>
                    <span>Settings</span>
                </a>
                <a href="#" class="menu-item logout" onclick="handleLogout(event)">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <p>v1.0 â€” Powered by</p>
                <p class="version">ONBOARD3</p>
            </div>
        </aside>

        <main class="main-content">
            <header class="header">
                <div class="header-content">
                    <div class="header-title">
                        <h2>Events </h2>
                        <p>Join upcoming events, hackathons, and meetups</p>
                    </div>
                </div>
            </header>

            <div class="content">
                <!-- My Registered Events -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-check-circle"></i> My Registered Events</h3>
                    </div>
                    <div id="userRegisteredEventsContainer">
                        <p style="color: #888; text-align: center; padding: 2rem;">Loading...</p>
                    </div>
                </div>

                <!-- Upcoming Events -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-calendar"></i> Upcoming Events</h3>
                    </div>
                    <div id="activeEventsContainer">
                        <p style="color: #888; text-align: center; padding: 2rem;">Loading...</p>
                    </div>
                </div>

                <!-- Past Events -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-history"></i> Past Events</h3>
                    </div>
                    <div id="pastEventsContainer">
                        <p style="color: #888; text-align: center; padding: 2rem;">Loading...</p>
                    </div>
                </div>
            </div>
        </main>
    </div>

   <script src="/js/eventList.js"></script>
</body>
</html>